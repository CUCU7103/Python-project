from django.shortcuts import render
from django.http.response import HttpResponseRedirect


# Create your views here.
def mainFunc(request): 
    return render(request,'main.html') # forward 방식 서버가 직접 template로 이동하여 해당 파일을 푸쉬함.



def setOsFunc(request):
    # print('request.GET : ' , request.GET) # <QueryDict: {}>
    if "favorite_os" in request.GET:
        print(request.GET["favorite_os"])
        request.session["f_os"]=request.GET["favorite_os"] # f_os라는 키로 세션을 생성
        return HttpResponseRedirect("/showos")# redirect 방식이다. 클라이언트 브라우저를 통해서 요청한다. 그래야 main.urls.py를 만날 수 있다.
    
    else:
      return render(request,'selectos.html')  

def showOsFunc(request):
    print('showOsFunc에 무사히 도착')

