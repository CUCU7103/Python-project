# 냉장고 클래스에 음식 클래스 담기

class Frige:
    isOppend = False 
    foods = []
    
    def open(self):
        self.isOppend = True
        print('냉장고 문 열기')
        
    def put(self,thing):
        if self.isOppend:
            self.foods.append(thing) # 클래스의 포함
            print('냉장고에 음식을 저장')
            self.list()
        else:
            print('냉장고 문이 닫혀서 음식을 담을 수 없음.')     
            
    def close(self):
        self.isOppend = False   
        print('냉장고 문 닫기')
        
    def list(self): # 냉장고에 담긴 음식물 확인
        for f in self.foods:
            print('-', f.irum, f.expiry_date)
        print()
        
class FoodData: # 포함관계 대상 음식물 클래스
    def __init__ (self,irum,expiry_date):
        self.irum= irum
        self.expiry_date = expiry_date
        
f = Frige()

apple = FoodData('사과','2023-04-30')
f.put(apple) 

f.open()
f.put(apple)
f.close()    

print()

cola = FoodData('콜라','2024-04-13')
f.open()
f.put(cola)
f.close()  









  
        




