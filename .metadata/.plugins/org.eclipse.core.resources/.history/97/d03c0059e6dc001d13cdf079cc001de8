# chat client
import socket
import threading
import sys

def handle(socket):
    while True:
        data = socket.recv(1024)
        if not data:continue
        print(data.decode('utf-8'))
        
sys.stdout.flush() # 파이선의 표준 출력은 자동 버퍼링이 됨. 그래서 버퍼의 내용을 비율 필요가 있다.

name = input('채팅 아이디 입력: ')
cs = socket.socket(socket.AF_INET, socket.SOCK_STREAM_)
cs.connect(('192.168.0.9',5555))
cs.send(name.encode('utf-8'))